# Template for secrets configuration
# Copy this file to secrets.yaml and fill in your values

# PubMed API credentials
pubmed:
  email: "your.email@example.com"  # Required for NCBI API
  api_key: "your_pubmed_api_key"   # Get from NCBI account

# AWS credentials
aws:
  access_key_id: "your_aws_access_key"
  secret_access_key: "your_aws_secret_key"
  region: "us-west-2"
  s3_bucket: "specializedmd-literature"

# UMLS API credentials
umls:
  api_key: "your_umls_api_key"     # Get from UMLS Terminology Services

# Database credentials
database:
  host: "localhost"
  port: 5432
  name: "specializedmd"
  user: "dbuser"
  password: "dbpassword"

# Neo4j credentials
neo4j:
  uri: "bolt://localhost:7687"
  user: "neo4j"
  password: "graphdbpassword"

# OpenAI API (for GPT-4)
openai:
  api_key: "your_openai_api_key"

# Groq API Configuration
GROQ_API_KEY: "your-groq-api-key-here"

# DeepSeek API Configuration
DEEPSEEK_API_KEY: "your-deepseek-api-key-here"

